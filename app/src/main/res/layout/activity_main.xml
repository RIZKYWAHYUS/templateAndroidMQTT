<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.user.theexmqtttemplate.MainActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_data_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                >

                <EditText
                    android:id="@+id/et_data"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Masukkan payload disini"
                    />

                <Button
                    android:id="@+id/btn_kirim"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/et_data"
                    android:layout_marginTop="10dp"
                    android:text="Kirim"
                    />
            </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_data_masuk"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/tv_data_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payload akan terkirim kesini"
                />


        </ScrollView>

    </android.support.v7.widget.CardView>


</RelativeLayout>
